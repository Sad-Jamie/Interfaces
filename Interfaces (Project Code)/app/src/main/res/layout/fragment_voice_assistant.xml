<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".assistant.VoiceAssistant">

    <Button
        android:id="@+id/speech_btn"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/speech_to_text"
        android:textColor="@color/white"
        android:backgroundTint="@color/purple_200"/>

    <TextView
        android:id="@+id/live_text"
        android:layout_margin="10dp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/live_transcription"
        android:textColor="@color/black"
        android:layout_below="@+id/speech_btn"/>

    <TextView
        android:id="@+id/temp_text"
        android:layout_width="372dp"
        android:layout_height="180dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="540dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="9dp"
        android:gravity="center_horizontal"
        android:text=""
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/text_to_speech_button"
        android:layout_width="49dp"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="335dp"
        android:layout_marginBottom="653dp"
        android:src="@drawable/speech_green"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="105dp"
        android:layout_marginTop="113dp"
        android:layout_marginEnd="106dp"
        android:layout_marginBottom="418dp"
        android:src="@drawable/talk_icon"
        tools:ignore="ContentDescription" />

</RelativeLayout>